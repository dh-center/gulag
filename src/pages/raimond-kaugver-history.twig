{% extends './layout.twig' %}



{% block content %}
  <main class="raimond-kaugver-history-page">
    <div class="raimond-kaugver-history-page__sliders-wrap">
      <div class="raimond-kaugver-history-page__slide slide1">
        <img class="slide-image slide1__image1" src="/img/raimond-kaugver-history/main-photo.jpg">
        <div class="text-on-paper slide1__text-wrapper">
          {% for text in kaugver.firstSlide.text %}
            <p>{{ text }}</p>
          {% endfor %}
        </div>
      </div>
      <div class="raimond-kaugver-history-page__slide slide2">
        <img class="slide2__image-right slide-image" src="/img/raimond-kaugver-history/diary1.png" alt="">
        <div class="slide2__text-wrapper text-on-paper">
          {% for text in kaugver.secondSlide.text %}
            <p>{{ text }}</p>
          {% endfor %}
        </div>
      </div>
      <div class="raimond-kaugver-history-page__slide slide3">
        <img class="slide3__image1 slide-image" src="/img/raimond-kaugver-history/book1.jpg" alt="">
        <img class="slide3__image2 slide-image" src="/img/raimond-kaugver-history/book2.jpeg" alt="">
        <div class="slide3__text-wrapper text-on-paper">
          {% for text in kaugver.thirdSlide.text %}
            <p>{{ text }}</p>
          {% endfor %}
        </div>
      </div>
      <div class="raimond-kaugver-history-page__slide slide4">
        <img class="slide4__image1 slide-image" src="/img/raimond-kaugver-history/diary2.png" alt="">
        <img class="slide4__image2 slide-image" src="/img/raimond-kaugver-history/diary3.jpg" alt="">
        <div class="slide4__text-wrapper text-on-paper">
          {% for text in kaugver.fourthSlide.text %}
            <p>{{ text }}</p>
          {% endfor %}
        </div>
      </div>
      <div class="raimond-kaugver-history-page__slide slide5">
        <img class="slide5__image1 slide-image" src="/img/raimond-kaugver-history/slide5_image1.png" alt="">
        <img class="slide5__image2 slide-image" src="/img/raimond-kaugver-history/slide5_image2.png" alt="">
        <div class="slide5__text-wrapper text-on-paper">
          {% for text in kaugver.fifthSlide.text %}
            <p>{{ text }}</p>
          {% endfor %}
        </div>
      </div>
    </div>
  </main>
{% endblock %}
