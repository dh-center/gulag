{% extends './layout.twig' %}



{% block content %}
  <div class="container-fluid">
    <div class="row">
      <main class="goda-wrap">
        <ul class="goda__period">
          {% for index, item in years.years %}
            <li id="{{ index + 1 }}"
              {% if index == 0 %}
              class="goda__period_item active"
            {% else %}
              class="goda__period_item"
              {% endif %}>
              <img src="img/pediod-{{ index + 1 }}.png" alt="">
              {{ item.years }}
            </li>
          {% endfor %}
        </ul>
        <div class="goda__period-description">
          {% for index, item in years.years %}
            <section
              {% if index == 0 %}
                class="goda__period-description_item active"
              {% else %}
                class="goda__period-description_item"
              {% endif %} for="{{ index + 1 }}">
              <h2>
                {{ item.name }}
              </h2>
              <p>
                {{ item.description }}
              </p>
              <button>
                Связанные темы
              </button>
              <div class="goda__period-description_themes">
                <button>
                  Назад
                </button>
                <div class="div">
                  {% for theme in 1..5 %}
                    <a href="#">
                      Тема №{{ theme }}
                    </a>
                  {% endfor %}
                </div>
              </div>
            </section>
          {% endfor %}
        </div>
      </main>
    </div>
  </div>
{% endblock %}
